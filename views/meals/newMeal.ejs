<h1 style="text-align: center; margin-top: 2%;">Create a new Meal</h1>
<div class="transparentDiv">
   <h3><a style="text-decoration: underline; color: black;" href="/meal/all">View Saved Meals</a></h3>

   <form action="/meal" method="POST">
   <div class="form-group">
      <label for="name">Meal Name:</label>
      <input type="text" class="form-control" id="name" name="name" required>
   </div>

   <div class="form-group">
      <label for="ingredients">Ingredients:</label>
      <select style="text-align: center;" name="ingredients" id="ingredients" class="form-control" multiple>
      <% ingredients.forEach(ingredient => { %>
         <option value="<%= ingredient.food_name %>"><%= ingredient.food_name %> </option> 
   <% }) %>
   </select> 

   <div class="form-group">
      <label for="content">Notes:</label>
      <textarea type="text" class="form-control" id="content" name="content" ></textarea>
   </div>

   <input class="submitButton" type="submit">

   </form>
</div>



