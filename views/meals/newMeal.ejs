<h1>Create a new Meal</h1>


<form action="/meals" method="POST">
<div class="form-group">
   <label for="name">Meal Name</label>
   <input type="text" class="form-control" id="name" name="name" required>
</div>

<div class="form-group">
   <label for="ingredients">Ingredients</label>
   <select name="ingredientId" id="ingredient" class="form-control" required multiple>
   <% ingredients.forEach(ingredient => { %>
      <option value="<% ingredient.name %>"><%= ingredient.food_name %> </option>
  <% }) %>
</select>  

<div class="form-group">
   <label for="content">Notes</label>
   <textarea type="text" class="form-control" id="content" name="content" required></textarea>
</div>

<input type="submit">


</form>



