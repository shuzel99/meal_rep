<h1>Create a new Meal</h1>
<h3><a href="/meal/all">View Saved Meals</a></h3>


<form action="/meal" method="POST">
<div class="form-group">
   <label for="name">Meal Name</label>
   <input type="text" class="form-control" id="name" name="name" required>
</div>

<div class="form-group">
   <label for="ingredients">Ingredients</label>
   <select name="ingredients" id="ingredients" class="form-control"  multiple>
   <% ingredients.forEach(ingredient => { %>
      <option value="<%= ingredient.food_name %>"><%= ingredient.food_name %> </option>
  <% }) %>
</select> 

<div class="form-group">
   <label for="content">Notes</label>
   <textarea type="text" class="form-control" id="content" name="content" ></textarea>
</div>

<input type="submit">

</form>

<p>The value of the ingredient selected is:
   <span class="output"></span>
</p> 

<button onclick="getIngredient()">Check ingredient</button>

<% function getOption() {
   selectElement = document.querySelector('#ingredients');
   output = selectElement.value;
   document.querySelector('.output').textContent = output;
} %>



